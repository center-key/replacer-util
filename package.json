{
   "name": "replacer-util",
   "version": "1.5.0",
   "description": "Find and replace strings or template outputs in text files (CLI tool designed for use in npm package.json scripts)",
   "license": "MIT",
   "type": "module",
   "module": "dist/replacer.js",
   "types": "dist/replacer.d.ts",
   "exports": "./dist/replacer.js",
   "files": [
      "dist"
   ],
   "bin": {
      "replacer": "bin/cli.js",
      "replacer-util": "bin/cli.js"
   },
   "repository": {
      "type": "git",
      "url": "git+https://github.com/center-key/replacer-util.git"
   },
   "homepage": "https://github.com/center-key/replacer-util",
   "bugs": "https://github.com/center-key/replacer-util/issues",
   "docs": "https://github.com/center-key/replacer-util#readme",
   "author": "Center Key (https://centerkey.com)",
   "keywords": [
      "cli",
      "concat",
      "files",
      "recursive",
      "regex",
      "replace",
      "scripts",
      "search",
      "site-generator",
      "template"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "varstmt": true,
      "node": true,
      "mocha": true
   },
   "replacerConfig": {
      "macros": {
         "slogan-line": "{{file.name}}: {{slogan}}"
      }
   },
   "runScriptsConfig": {
      "clean": [
         "rimraf build dist spec/target"
      ],
      "lint": [
         "jshint . --exclude-path .gitignore",
         "eslint --max-warnings 0"
      ],
      "build": [
         "tsc",
         "add-dist-header build dist"
      ]
   },
   "scripts": {
      "pretest": "run-scripts clean lint build",
      "test": "mocha spec/*.spec.js",
      "posttest": "html-validator spec/target"
   },
   "dependencies": {
      "chalk": "~5.6",
      "cli-argv-util": "~1.3",
      "fancy-log": "~2.0",
      "glob": "~12.0",
      "istextorbinary": "~9.5",
      "liquidjs": "~10.24",
      "slash": "~5.1"
   },
   "devDependencies": {
      "@eslint/js": "~9.39",
      "@fortawesome/fontawesome-free": "~7.1",
      "@types/fancy-log": "~2.0",
      "@types/node": "~24.10",
      "add-dist-header": "~1.6",
      "assert-deep-strict-equal": "~1.2",
      "copy-file-util": "~1.3",
      "eslint": "~9.39",
      "fetch-json": "~3.3",
      "highlight.js": "~11.11",
      "jshint": "~2.13",
      "mocha": "~11.7",
      "pretty-print-json": "~3.0",
      "rimraf": "~6.1",
      "run-scripts-util": "~1.3",
      "typescript": "~5.9",
      "typescript-eslint": "~8.47",
      "w3c-html-validator": "~2.0"
   }
}
